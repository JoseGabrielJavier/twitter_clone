<%= provide(:title, @user.name) %>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <%= gravatar_for(@user) %>
                    </div>
                    <div class="col-md-6">
                        <h1><%= @user.name %></h1>
                        <h6><%= @user.email %></h6>
                    </div>
                    <div class="col-md-4">
                        <h5 class="d-inline p-3">Micropost</h5>
                        <h5 class="d-inline p-3">Following</h5>
                        <h5 class="d-inline p-3">Followers</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
