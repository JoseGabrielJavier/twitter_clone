<%= provide(:title, "All Users") %>
<div class="row">
    <div class="col-md-12">
        <% @users.each do |user| %>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <%= gravatar_for(user) %>
                                </div>
                                <div class="col-md-10">
                                    <h1><%= user.name %></h1>
                                    <h6><%= user.email %></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                </div>
            </div>
        <% end %>
    </div>
</div>
